<project name="Quizzical" basedir=".">
	<description>
		Manages dependencies for the Quizzical system.
	</description>

	<!-- Locations of project directories -->
	<property name="packages" location="packages" />
	<property name="build" location="build" />
	<property name="source" location="source" />

	<!-- Versions of dependencies -->
	<property name="v_ci" value="1.7.2" /> 		<!-- CodeIgniter -->
	<property name="v_dwoo" value="1-1-1" />	<!-- Dwoo Templates -->
	<property name="v_ion" value="13576c3" />	<!-- Ion Auth -->

	<target name="fetch">
		<!-- Dwoo Templates -->
		<get src="http://dwoo.org/download/dwoo-v${v_dwoo}/download/0"
			 dest="${packages}/dwoo.tar.gz" />

		<gunzip src="${packages}/dwoo.tar.gz"
			 dest="${packages}/dwoo.tar" />
		<untar src="${packages}/dwoo.tar" dest="${packages}/dwoo" />

		<!-- Ion Auth -->
		<get src="http://github.com/benedmunds/CodeIgniter-Ion-Auth/zipball/${v_ion}"
			 dest="${packages}/ion.zip" />

		<unzip src="${packages}/ion.zip" dest="${packages}/ion" />

		<!-- CodeIgniter -->
		<get src="http://www.codeigniter.com/download_files/CodeIgniter_${v_ci}.zip"
			 dest="${packages}/codeigniter.zip" />

		<unzip src="${packages}/codeigniter.zip"
			 dest="${packages}/codeigniter" />
	</target>

	<target name="clean-packages">
		<delete includeemptydirs="true">
			<fileset dir="${packages}"
				 includes="**/*"
				 excludes="README.txt" />
		</delete>
	</target>

	<target name="build">
		<!-- CodeIgniter -->
		<copy todir="${build}">
			<fileset dir="${packages}/codeigniter/CodeIgniter_${v_ci}">
				<include name="index.php" />
				<include name="license.txt" />
				<include name="system/**/*" />
				<exclude name="system/application/controllers/welcome.php" />
				<exclude name="system/application/views/welcome_message.php" />
			</fileset>
		</copy>

		<!-- Dwoo Templates -->
		<copy todir="${build}/system/application/libraries">
			<fileset dir="${packages}/dwoo">
				<include name="**/*" />
				<exclude name="dwoo/Dwoo/Adapters/**" />
			</fileset>
		</copy>

		<copy todir="${build}/system/application">
			<fileset dir="${packages}/dwoo/dwoo/Dwoo/Adapters/CodeIgniter">
				<include name="config/**" />
				<include name="libraries/**" />
			</fileset>
		</copy>

		<!-- Ion Auth -->
		<copy todir="${build}/system/application">
			<fileset dir="${packages}/ion/benedmunds-CodeIgniter-Ion-Auth-${v_ion}">
				<include name="config/**" />
				<include name="language/**" />
				<include name="libraries/**" />
				<include name="models/**" />
				<include name="views/**" />
			</fileset>
		</copy>

		<!-- Quizzical -->
		<copy todir="${build}" overwrite="true">
			<fileset dir="${source}"
				 includes="**/*"
				 excludes="README.txt" />
		</copy>
	</target>

	<target name="clean-build">
		<delete includeemptydirs="true">
			<fileset dir="${build}"
				 includes="**/*"
				 excludes="README.txt" />
		</delete>
	</target>
</project>
